{
  "root": true,
  "extends": ["plugin:vue/recommended", "@vue/prettier"],
  "rules": {
    "vue/attributes-order": "off",
    "vue/html-indent": ["error", "tab", {
      "attribute": 1,
      "closeBracket": 0,
      "alignAttributesVertically": true,
      "ignores": []
    }],
    "vue/max-attributes-per-line": [2, {
      "singleline": 3,
      "multiline": {
        "max": 2,
        "allowFirstLine": false
      }
    }]
  }
}
